{
  "kind": "collectionType",
  "collectionName": "camps",
  "info": {
    "singularName": "camp",
    "pluralName": "camps",
    "displayName": "Camp"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "season": {
      "type": "enumeration",
      "enum": ["Frühjahr", "Sommer", "Herbst"],
      "required": true
    },
    "dateRange": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "venue": {
      "type": "string",
      "required": true
    },
    "ageGroup": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "spots": {
      "type": "enumeration",
      "enum": ["Ausgebucht", "Wenige Plätze", "Freie Plätze"],
      "required": true
    },
    "badge": {
      "type": "string"
    },
    "heroImage": {
      "type": "string",
      "required": true
    },
    "services": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "schedule": {
      "type": "component",
      "component": "shared.schedule-entry",
      "repeatable": true
    },
    "highlights": {
      "type": "component",
      "component": "shared.text-item",
      "repeatable": true
    },
    "events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::event.event",
      "mappedBy": "camp"
    }
  }
}
